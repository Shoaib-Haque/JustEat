@model List<JustEat.Models.Restaurent>

@{
    ViewBag.Title = "SearchRestaurentByArea";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}


    @if (Model.Count() == 0)
    {
        
            <p>No Restaurent In This Area</p>
        
    }
    else
    {
        for (var i = 0; i < Model.Count(); i++)
        {
            var id = Model[i].Id;
            var image = Model[i].Image;
        <div style="display: inline-block">
            <div>
                <a href="@Url.Action("FoodByRestaurent", "Home", new { id = Model[i].Id }) "><img src="../Image/@image" width="200" height="150" /></a>
            </div>
            <div>
                @Model[i].Name
            </div>
                
        </div>
            
        if (i % 5 == 4)
        {
            <br />
        }
        }
    }