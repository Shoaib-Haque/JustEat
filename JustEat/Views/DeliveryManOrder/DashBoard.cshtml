@model IEnumerable<JustEat.Models.Order>

@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/DeliveryManLayout.cshtml";
}

<div id="middlediv" style="top:10px">
    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlacedTime)
            </th>
            
           
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            
           
            <th>
                @Html.DisplayNameFor(model => model.FinalAmmount)
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Area
            </th>
            <th>
                Restaurant
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PlacedTime)
                </td>
                
                
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.FinalAmmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Area.AreaName)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Restaurent.Name)
                </td>
                <td>
                    @Html.ActionLink("Pick Order", "Pick", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>


