@model JustEat.Models.Food

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/RestaurentLayout.cshtml";
}
<div id="middlediv">
    <form action="~/Food/Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Food</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>

            <div class="form-group">
                @{ Html.EnableClientValidation(true); }
                @Html.LabelFor(model => model.Image, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @{var Image = Model.Image;}
                    <img src="~/Image/@Image" height="150" width="200" />
                    <input type="file" name="Image" id="Image" />
                    @Html.ValidationMessageFor(model => model.Image)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UnitPrice, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="number" name="UnitPrice" id="UnitPrice" value="@Model.UnitPrice" />
                    @Html.ValidationMessageFor(model => model.UnitPrice)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Details, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Details)
                    @Html.ValidationMessageFor(model => model.Details)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        
    </form>
        

</div>

