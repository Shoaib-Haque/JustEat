@model IEnumerable<JustEat.Models.Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{var url = HttpContext.Current.Request.Url.AbsoluteUri;}

<div id="middlediv">
    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Food.Title)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Food.Title)
                </td>
                <td>
                    @Html.ActionLink("Deny", "Deny", new { id = (int)item.Id, ur = url },null) |
                    @Html.ActionLink("Delete", "Delete", new { id = (int)item.Id, ur = url },null)
                </td>
            </tr>
        }

    </table>

</div>
